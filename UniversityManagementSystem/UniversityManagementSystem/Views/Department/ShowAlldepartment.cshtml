@using UniversityManagementSystem.Models.EntityModel

@{
    Layout = null;
    int serial = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowAlldepartment</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-sm-offset-1 text-center">
                    <hr/>
                    <hr/>
                    <h4 class="text-center">View All Departments</h4>
                    <hr/>
                    
                    <table class="col-sm-10 col-sm-offset-1 text-center table-bordered table-striped table-hover">
                        <tr >
                            <th class="text-center">Serial</th>
                            <th class="text-center">Code</th>
                            <th class="text-center">Name</th>
                        </tr>

                        @foreach (Department department in ViewBag.Departments)
                        {
                            <tr>
                                <td>@(++serial)</td>
                                <td>@department.DepartmentCode</td>
                                <td>@department.DepartmentName</td>
                            </tr>
                        }
                    </table>
                </div>
               
            </div>
        </div>
    </div>
</body>
</html>
