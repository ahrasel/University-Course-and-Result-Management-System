
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SaveDepartment</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
<body>
<div>

    <div class="container">
        <div class="row">
            <form method="post" id="department-save" class="form-horizontal">
                <h4 class="text-center">Save Department</h4>
                <hr />
                <h4 class="text-center" >@ViewBag.msg</h4>
                <hr />
                <div class="form-group ">
                    <label class="control-label col-sm-3 col-sm-offset-1">Code</label>
                    <div class="col-sm-5">
                        <input class="form-control" type="text" name="DepartmentCode" placeholder="Department Code" />
                    </div>
                </div>

                <div class="form-group ">
                    <label class="control-label col-sm-3 col-sm-offset-1">Name</label>
                    <div class="col-sm-5">
                        <input class="form-control" type="text" name="DepartmentName" placeholder="Department Name" />
                    </div>
                </div>

                <div class="form-group ">

                    <div class="col-sm-5 col-sm-offset-4">
                        <input class="btn btn-success form-control" type="submit" value="Save" />
                    </div>
                </div>
                <hr />
                <hr />
            </form>
        </div>
    </div>


</div>
    
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

    <script>
        $("#department-save").validate({
            rules: {
                DepartmentName: "required",
                DepartmentCode: {
                    required: true,
                    minlength: 2,
                    maxlength: 7
                }
            },
            messages: {
                DepartmentCode: "Deparment Code Must Be 2 to 7 Character"
            }
        });
    </script>

</body>
</html>
